.class_box .h1{
  font-size: 50rpx;
  height: 50px;
  line-height: 50px;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.class_box .list_one{
  padding: 20rpx;
  
}
.class_box .list_one .h2{
  font-size: 40rpx;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
}
.class_box .list_one .item{
  display: flex;
  height: 180rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.class_box .list_one .item .img_box{
  width: 200rpx;
}
.class_box .list_one .item .img_box image{
  width: 100%;
  height: 100%;
}
.class_box .list_one .item .content_box{
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.class_box .list_one .item .content_box .til{
  font-size: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.class_box .list_one .item .content_box .desc{
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.class_box .list_one .item .content_box .bot_box{
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 30rpx;
}
.class_box .list_one .item .content_box .bot_box view{
  flex:1
}